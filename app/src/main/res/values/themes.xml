<resources>
    <style name="Base.V21.Theme.WeatherApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!--    Navigation Bar Color. -->
        <item name="android:navigationBarColor">@color/primaryBackground</item>
        <!--    Status Bar Color. -->
        <item name="android:statusBarColor">@color/primaryBackground</item>
        <!--    Primary Color. -->
        <item name="android:colorPrimary">@color/ic_launcher_background</item>
        <item name="android:colorPrimaryDark">@color/primaryTextColor</item>
        <item name="android:colorAccent">@color/ic_launcher_background</item>
        <!--    Another Color. -->
        <item name="drawableTint">@color/invertedColor</item>
        <item name="cardBackgroundColor">@color/primaryBackground</item>
        <!--    Switch Color. -->
        <item name="colorControlActivated">@color/invertedColor</item>
        <!--    Text Color. -->
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="hintTextColor">@color/secondaryTextColor</item>
        <item name="textColorAlertDialogListItem">@color/primaryTextColor</item>
        <!--    Background Color. -->
        <item name="android:windowBackground">@color/primaryBackground</item>
        <item name="colorBackgroundFloating">@color/primaryBackground</item>
    </style>

    <style name="Base.Theme.WeatherApp" parent="Base.V21.Theme.WeatherApp" />

    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp" />

    <style name="SearchViewStyle" parent="TextAppearance.Material3.SearchView">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
    </style>
</resources>